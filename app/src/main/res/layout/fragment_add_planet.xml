<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/planet"
    tools:context=".AddPlanetFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etNameAddPlanetFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="164dp"
            android:background="#30FF"
            android:ems="10"
            android:hint="Name..."
            android:inputType="text"
            android:minHeight="48dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etSizeAddPlanetFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="#30FF"
            android:ems="10"
            android:hint="Size..."
            android:inputType="text"
            android:minHeight="48dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/etNameAddPlanetFragment"
            app:layout_constraintTop_toBottomOf="@+id/etNameAddPlanetFragment" />

        <EditText
            android:id="@+id/etOrbitAddPlanetFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:background="#30FF"
            android:ems="10"
            android:hint="Orbit..."
            android:inputType="text"
            android:minHeight="48dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/etHowFarIsItFromEarthAddPlanetFragment"
            app:layout_constraintTop_toBottomOf="@+id/etHowFarIsItFromEarthAddPlanetFragment"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/etHowFarIsItFromEarthAddPlanetFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:background="#30FF"
            android:ems="10"
            android:hint="howFarIsItFromEarth..."
            android:inputType="text"
            android:minHeight="48dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/etSizeAddPlanetFragment"
            app:layout_constraintTop_toBottomOf="@+id/etSizeAddPlanetFragment" />

        <Button
            android:id="@+id/btnAddAddCarFragment"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="168dp"
            android:background="@drawable/btn"
            android:text="ADD"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>